<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="MauiWidgetlabLabs.Features.Themes.Units.IconButton"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:units="clr-namespace:MauiWidgetlabLabs.Features.UI.Units">
    <Style TargetType="{x:Type units:IconButton}">
        <Setter Property="ControlTemplate">
            <Setter.Value>
                <ControlTemplate>
                    <Grid HeightRequest="50" WidthRequest="50">
                        <Button
                            x:Name="PART_Button"
                            BackgroundColor="{TemplateBinding Background}"
                            CornerRadius="25"
                            HorizontalOptions="Center"
                            InputTransparent="True"
                            VerticalOptions="Center" />
                        <Path
                            Data="{TemplateBinding PathData}"
                            Fill="{TemplateBinding PathColor}"
                            HorizontalOptions="CenterAndExpand"
                            InputTransparent="True"
                            TranslationX="{TemplateBinding X}"
                            TranslationY="{TemplateBinding Y}"
                            VerticalOptions="FillAndExpand" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>